[Unit]
Description=Tobira
Documentation=https://github.com/elan-ev/tobira

After=local-fs.target
After=network.target
After=postgresql.service
After=meili.service

[Service]
WorkingDirectory=/usr/bin/tobira/
ExecStart=/usr/bin/tobira serve
Restart=always
User=tobira

[Install]
WantedBy=multi-user.target
