#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
DH_VERBOSE = 1
export DH_OPTIONS=-v

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

override_dh_auto_clean:
	mvn -s debian/maven.settings.xml clean

override_dh_auto_build:
	mvn -s debian/maven.settings.xml install || \
	mvn -s debian/maven.settings.xml install -rf :matterhorn-admin-ui-ng
	#Remove the autogenerated distribution directory since it's named differently than those in the tarballs
	find ./build/* -maxdepth 0 -type d -exec rm -rf '{}' \;
	#Untar everything
	ls build | while read line; do tar -xvf build/$$line -C build; done
	#Copy the all-in-one distribution to the base distribution
	cp -r build/opencast-dist-allinone build/opencast-dist-base
	#Remove the karaf feature configuration from the base distribution
	rm -f build/opencast-dist-base/etc/org.apache.karaf.features.cfg
	#Copy the jars from all of the distributions to the base
	find ./build/* -maxdepth 0 -type d -exec rsync -a '{}'/system/ build/opencast-dist-base/system/ \;
	#Remove the karaf feature configuration file, since that is set with a different package
	rm -f build/opencast-dist-base/etc/org.apache.karaf.features.cfg

# main packaging script based on dh7 syntax
%:
	dh $@

# debmake generated override targets
# This is example for Cmake (See http://bugs.debian.org/641051 )
